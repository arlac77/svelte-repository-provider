{
  "name": "svelte-repository-provider",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "svelte": "./src/index.svelte"
    }
  },
  "description": "Svelte components for repository providers",
  "keywords": [
    "component",
    "repository",
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "test": "npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*-cafe.mjs -s build/test --page-request-timeout 5000 --app-init-delay 8000 --app vite",
    "docs": "documentation readme --section=API ./src/**/*.mjs",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs",
    "preview": "vite preview"
  },
  "dependencies": {
    "content-entry": "^8.0.1",
    "repository-provider": "^34.0.2",
    "svelte-guard-history-router": "^6.0.6"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "documentation": "^14.0.2",
    "mf-styling": "^3.1.2",
    "npm-pkgbuild": "^13.0.4",
    "semantic-release": "^22.0.8",
    "svelte": "^4.2.7",
    "testcafe": "^3.4.0",
    "vite": "^5.0.2",
    "vite-plugin-compression2": "^0.11.0"
  },
  "optionalDependencies": {
    "mf-hosting-cloudflare": "^1.0.6",
    "mf-hosting-frontend": "^2.2.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/svelte-repository-provider"
  },
  "bugs": {
    "url": "https://github.com/arlac77/svelte-repository-provider/issues"
  },
  "homepage": "https://github.com/arlac77/svelte-repository-provider#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/"
    },
    "example": true,
    "frontend": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-cloudflare",
      "arlac77/template-npm-pkgbuild",
      "arlac77/template-svelte-component",
      "arlac77/template-vite"
    ]
  }
}
