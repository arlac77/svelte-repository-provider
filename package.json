{
  "name": "svelte-repository-provider",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "svelte": "./src/index.svelte",
  "description": "Svelte components for repository providers",
  "keywords": [
    "component",
    "repository",
    "svelte",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "vite build",
    "start": "vite",
    "test": "npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --page-request-timeout 3000 --app-init-delay 3000 --app \"vite preview\"",
    "docs": "documentation readme --section=API ./src/**/*.mjs && documentation readme --section=API {{javascript.source}}",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs && documentation lint {{javascript.source}}",
    "preview": "vite preview"
  },
  "dependencies": {
    "repository-provider": "^32.3.1",
    "svelte-guard-history-router": "^5.5.13"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@sveltejs/vite-plugin-svelte": "^1.4.0",
    "content-entry": "^5.2.15",
    "documentation": "^14.0.0",
    "mf-styling": "^1.7.30",
    "npm-pkgbuild": "^10.15.20",
    "semantic-release": "^19.0.5",
    "svelte": "^3.54.0",
    "testcafe": "^2.1.0",
    "vite": "^3.2.5"
  },
  "optionalDependencies": {
    "mf-hosting": "^1.7.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/svelte-repository-provider.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/svelte-repository-provider/issues"
  },
  "homepage": "https://github.com/arlac77/svelte-repository-provider#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "groups": "examples",
    "http.base.path": "/examples"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-cloudflare",
      "arlac77/template-pacman",
      "arlac77/template-svelte-component"
    ]
  }
}
